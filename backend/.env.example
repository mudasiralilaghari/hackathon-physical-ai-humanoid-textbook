# Your database connection string for Neon Serverless Postgres
DATABASE_URL="postgresql+asyncpg://user:password@host:port/database"

# OpenRouter API Key (required for RAG functionality - cost-effective option)
OPENROUTER_API_KEY="your-openrouter-api-key"

# Qdrant Configuration
QDRANT_URL="your-qdrant-url"
QDRANT_API_KEY="your-qdrant-api-key"
QDRANT_COLLECTION_NAME="textbook-content"

# Cohere Configuration (for embeddings)
COHERE_API_KEY="your-cohere-api-key"

# Whether to use OpenRouter (default: true for cost-effective operation)
USE_OPENROUTER="true"

# Whether to use OpenAI Agents SDK with OpenRouter (set to "true" to enable)
USE_OPENAI_AGENTS="true"

# Optional: Specific OpenRouter model to use (default: openai/gpt-4o)
# OPENROUTER_MODEL="openai/gpt-4o"
